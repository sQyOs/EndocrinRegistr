@model EndocrinRegistr.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Вход</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
